{
	"name": "devfile-yaml-editor",
	"displayName": "devfile.yaml editor",
	"description": "devfile.yaml editing for che devfiles with autocompletion, validation, hover",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:yaml",
		"onCommand:devfile.generate",
		"onCommand:devfile.open"
	],
	"main": "./out/extension.js",
	"extensionDependencies": [
		"redhat.vscode-yaml"
	],
	"contributes": {
		"commands": [
			{
				"command": "devfile.generate",
				"title": "Generate a devfile for your current workspace"
			},
			{
				"command": "devfile.open",
				"title": "Open Devfile"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "devfile.open",
					"when": "resourceFilename == devfile.yaml"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"axios": "^0.19.2",
		"open": "^7.0.2",
		"request-light": "^0.2.5"
	}
}
